{
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
      "type": "stdio"
    },
    "convex": {
      "command": "npx",
      "args": ["-y", "convex@latest", "mcp", "start"],
      "type": "stdio"
    },
    "shadcn": {
      "command": "npx",
      "args": ["shadcn@latest", "mcp"],
      "type": "stdio"
    }
  }
}
