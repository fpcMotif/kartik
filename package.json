{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=22.0.0",
    "bun": ">=1.3.1"
  },
  "scripts": {
    "dev": "next dev",
    "dev:webpack": "next dev --no-turbo",
    "build": "next build",
    "start": "next start",
    "lint": "bunx oxlint .",
    "lint:fix": "bunx oxlint --fix .",
    "lint:next": "next lint",
    "lint:check": "bunx oxlint .",
    "format": "bunx ultracite fix",
    "check": "bunx ultracite check",
    "format:biome": "bunx @biomejs/biome format --write .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "check:all": "bun run format && bun run lint && bun run typecheck && bun run check",
    "prepare": "husky"
  },
  "dependencies": {
    "@effect/schema": "^0.75.5",
    "@octokit/rest": "^22.0.0",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-slot": "^1.1.2",
    "@tabler/icons-react": "^3.35.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "effect": "^3.18.4",
    "framer-motion": "^12.9.2",
    "howler": "^2.2.4",
    "lucide-react": "^0.483.0",
    "motion": "^12.23.24",
    "next": "^16.0.0",
    "next-themes": "^0.4.6",
    "next-video": "^2.5.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-github-calendar": "^4.5.9",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "tailwind-merge": "^3.0.2",
    "tw-animate-css": "^1.2.4",
    "ultracite": "^6.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.0",
    "@tailwindcss/postcss": "^4",
    "@types/howler": "^2.2.12",
    "@types/node": "^20",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "oxlint": "^1.24.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,cts,mts,json,jsonc,css,scss,md,mdx}": [
      "bunx ultracite fix --",
      "bunx oxlint --fix --"
    ]
  }
}
