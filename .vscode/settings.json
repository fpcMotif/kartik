{
  "typescript.tsdk": "node_modules/typescript/lib",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "emmet.showExpandedAbbreviation": "never",
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit",
    "source.organizeImports.biome": "explicit"
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "constant.numeric.decimal.ts",
          "constant.numeric.decimal.tsx",
          "constant.numeric.decimal.js",
          "constant.numeric.decimal.jsx",
          "constant.numeric.hexadecimal.ts",
          "constant.numeric.hexadecimal.tsx",
          "constant.numeric.hexadecimal.js",
          "constant.numeric.hexadecimal.jsx",
          "constant.numeric.binary.ts",
          "constant.numeric.binary.tsx",
          "constant.numeric.binary.js",
          "constant.numeric.binary.jsx"
        ],
        "settings": {
          "foreground": "#ff6b6b",
          "fontStyle": "bold"
        }
      }
    ]
  },
  "css.lint.unknownAtRules": "ignore",
  "css.validation": {
    "unknownAtRules": "ignore"
  },
  "files.associations": {
    "*.css": "postcss"
  }
}
